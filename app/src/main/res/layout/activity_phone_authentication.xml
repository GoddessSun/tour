<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayf2"
    tools:context="com.sun.tour.persion.authentication.phone.PhoneAuthenticationActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen20"
        android:paddingRight="@dimen/dimen10"
        android:paddingTop="@dimen/dimen40"
        android:paddingBottom="@dimen/dimen40"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen48"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/title_small_txt_size"
                android:textColor="@color/text_color333"
                android:text="手机号"
                android:gravity="center_vertical"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textSize="@dimen/title_small_txt_size"
                android:textColor="@color/text_color333"
                android:hint="请输入手机号"
                android:gravity="center_vertical"
                android:background="@null"
                android:inputType="number"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_line_height"
            android:background="@color/grayf2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen48"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/title_small_txt_size"
                android:textColor="@color/text_color333"
                android:text="验证码"
                android:gravity="center_vertical"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="@dimen/title_small_txt_size"
                android:textColor="@color/text_color333"
                android:hint="请输入验证码"
                android:gravity="center_vertical"
                android:background="@null"
                android:inputType="number"/>
            <View
                android:layout_width="@dimen/base_line_height"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dimen10"
                android:layout_marginBottom="@dimen/dimen10"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/title_small_txt_size"
                android:textColor="@color/blue43"
                android:text="获取验证码"
                android:gravity="center"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_line_height"
            android:background="@color/grayf2"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen48"
        android:layout_margin="@dimen/dimen20"
        android:textSize="@dimen/text_normal_size"
        android:textColor="@color/white"
        android:background="@drawable/water_ripple"
        android:text="立即认证"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
