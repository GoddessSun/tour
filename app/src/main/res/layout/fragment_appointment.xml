<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sun.tour.appointment.AppointmentFragment">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:contentInsetStart="0dp"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="预约"
                android:gravity="center"
                android:textSize="@dimen/title_txt_size"
                android:textColor="@color/text_color333"/>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_line_height"
        android:background="@color/color_base_line"/>

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/tablayout_appointment"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:tl_textsize="16sp"
        app:tl_textUnselectColor="@color/text_color666"
        app:tl_textSelectColor="@color/blue"
        app:tl_indicator_color="@color/blue"
        app:tl_indicator_gravity="BOTTOM"
        app:tl_indicator_margin_left="40dp"
        app:tl_indicator_margin_right="40dp"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_appointment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
