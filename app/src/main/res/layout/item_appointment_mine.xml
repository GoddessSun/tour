<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_item_appoint_mine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/dimen16"
    android:paddingBottom="@dimen/dimen16"
    android:paddingRight="@dimen/dimen16">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/image_item_appoint_mine"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_user_icon"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:riv_corner_radius="5dip"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_item_appoint_mine"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true">
        <LinearLayout
            android:id="@+id/linear_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_color333"
                android:textSize="@dimen/text_normal_size"
                android:text="最可爱的苗苗"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_size12"
                android:text="等待接受"
                android:textColor="@color/red"/>
        </LinearLayout>

        <TextView
            android:id="@+id/text_item_appoint_mine_hotel_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/text_color999"
            android:text="[ 时尚最豪华酒店 ]"
            android:textSize="@dimen/txt_size12"
            android:layout_below="@id/linear_item_name"
            android:layout_marginTop="4dp"/>

        <ImageView
            android:id="@+id/image_item_appoint_mine_hotel"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_hotel_background"
            android:scaleType="centerCrop"
            android:layout_marginTop="6dp"
            android:layout_below="@id/text_item_appoint_mine_hotel_name"
            android:layout_marginRight="4dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/image_item_appoint_mine_hotel"
            android:layout_alignTop="@id/image_item_appoint_mine_hotel"
            android:layout_alignBottom="@id/image_item_appoint_mine_hotel">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="起始时间: 2018-09-02 8:00"
                android:textSize="@dimen/txt_size12"
                android:textColor="@color/text_color999"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="起始时间: 2018-09-02 8:00"
                android:textSize="@dimen/txt_size12"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_color999"/>
        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>