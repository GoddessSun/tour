<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grayf2"
    tools:context="com.sun.tour.store.image.ImageActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen48"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen48">
            <ImageView
                android:id="@+id/store_edit_image_back_iv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title_txt_size"
                android:textColor="@color/text_color333"
                android:text="宣传图片"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/store_edit_image_save_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_normal_size"
                android:textColor="@color/blue43"
                android:text="保存"
                android:layout_alignParentRight="true"
                android:paddingLeft="@dimen/dimen10"
                android:paddingRight="@dimen/dimen20"
                android:gravity="center"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dimen20"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/base_line_height">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/store_edit_image_title_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal_size"
                android:textColor="@color/text_color333"
                android:text="上传图片资料"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_size12"
                android:textColor="@color/text_color999"
                android:text="(100张以内)"
                android:layout_marginLeft="@dimen/dimen10"
                android:layout_alignBottom="@id/store_edit_image_title_tv1"
                android:layout_toRightOf="@id/store_edit_image_title_tv1"/>
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/store_edit_image_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen20"/>

    </LinearLayout>
</LinearLayout>
