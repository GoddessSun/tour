<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_item_appoint_mine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dimen16">
    <ImageView
        android:id="@+id/image_item_persion_center"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_user_icon"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/dimen16"
        android:layout_marginBottom="@dimen/dimen16"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_item_persion_center"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:paddingRight="@dimen/dimen16"
        android:layout_marginBottom="@dimen/dimen16">
        <LinearLayout
            android:id="@+id/linear_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_color333"
                android:textSize="@dimen/text_normal_size"
                android:text="最可爱的苗苗"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_size12"
                android:text="等待接受"
                android:textColor="@color/red"/>
        </LinearLayout>

        <TextView
            android:id="@+id/text_item_appoint_mine_hotel_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/text_color999"
            android:text="时尚最豪华酒店时尚最豪华酒店时尚最豪华酒店时尚最豪华酒店"
            android:textSize="@dimen/txt_size12"
            android:layout_below="@id/linear_item_name"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="@dimen/dimen10"/>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_below="@id/text_item_appoint_mine_hotel_name">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="起始时间: 2018-09-02 8:00"
                android:textSize="@dimen/txt_size12"
                android:textColor="@color/text_color999"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="起始时间: 2018-09-02 8:00"
                android:textSize="@dimen/txt_size12"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_color999"/>
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/image_item_persion_center"
        android:background="@color/backgraound" />
</RelativeLayout>