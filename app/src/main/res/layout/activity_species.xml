<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayf2"
    android:orientation="vertical"
    tools:context="com.sun.tour.store.classify.SpeciesActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen48"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen48">

            <ImageView
                android:id="@+id/store_edit_species_back_iv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="种类/年代"
                android:textColor="@color/text_color333"
                android:textSize="@dimen/title_txt_size" />

            <TextView
                android:id="@+id/store_edit_species_save_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:paddingLeft="@dimen/dimen10"
                android:paddingRight="@dimen/dimen20"
                android:text="保存"
                android:textColor="@color/blue43"
                android:textSize="@dimen/text_normal_size" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_line_height"
        android:background="@color/grayf2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dimen20"
        android:paddingTop="@dimen/dimen20">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen48"
            android:background="@color/white"
            android:paddingLeft="@dimen/dimen20"
            android:paddingRight="@dimen/dimen20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="品牌"
                android:textColor="@color/text_color333"
                android:textSize="@dimen/title_small_txt_size" />

            <TextView
                android:id="@+id/store_edit_species_brand_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingLeft="@dimen/dimen20"
                android:text="选择"
                android:textColor="@color/blue43"
                android:textSize="@dimen/title_small_txt_size" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_line_height"
            android:layout_marginLeft="@dimen/dimen20"
            android:background="@color/grayf2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen48"
            android:background="@color/white"
            android:paddingLeft="@dimen/dimen20"
            android:paddingRight="@dimen/dimen20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="品种"
                android:textColor="@color/text_color333"
                android:textSize="@dimen/title_small_txt_size" />

            <TextView
                android:id="@+id/store_edit_brand_species_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingLeft="@dimen/dimen20"
                android:text="选择"
                android:textColor="@color/blue43"
                android:textSize="@dimen/title_small_txt_size" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_line_height"
            android:layout_marginLeft="@dimen/dimen20"
            android:background="@color/grayf2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen48"
            android:background="@color/white"
            android:paddingLeft="@dimen/dimen20"
            android:paddingRight="@dimen/dimen20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="年代"
                android:textColor="@color/text_color333"
                android:textSize="@dimen/title_small_txt_size" />

            <TextView
                android:id="@+id/store_edit_species_year_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingLeft="@dimen/dimen20"
                android:text="选择"
                android:textColor="@color/blue43"
                android:textSize="@dimen/title_small_txt_size" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
