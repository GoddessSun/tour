<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="@dimen/dimen20"
    tools:context="com.sun.tour.regist.RegistActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen48"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen20">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/title_txt_size"
            android:textColor="@color/text_color333"
            android:text="登录密码"/>
        <EditText
            android:id="@+id/regist_password_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="@dimen/title_txt_size"
            android:textColor="@color/text_color333"
            android:hint="@string/regist_password_hint"
            android:textColorHint="@color/text_color666"
            android:background="@null"
            android:layout_marginLeft="@dimen/dimen16"
            android:inputType="textPassword"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_line_height"
        android:background="@color/text_color999"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen48"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/title_txt_size"
            android:textColor="@color/text_color333"
            android:text="确认密码"/>
        <EditText
            android:id="@+id/regist_password_again_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="@dimen/title_txt_size"
            android:textColor="@color/text_color333"
            android:hint="@string/regist_password_again_hint"
            android:textColorHint="@color/text_color666"
            android:background="@null"
            android:layout_marginLeft="@dimen/dimen16"
            android:inputType="textPassword"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_line_height"
        android:background="@color/text_color999"/>

    <Button
        android:id="@+id/regist_finish_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen48"
        android:textSize="@dimen/title_txt_size"
        android:textColor="@color/white"
        android:text="确  认"
        android:background="@drawable/water_ripple"
        android:layout_marginTop="@dimen/dimen100"
        android:layout_marginLeft="@dimen/dimen5"
        android:layout_marginRight="@dimen/dimen5"/>
</LinearLayout>
