<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <TextView
        android:id="@+id/store_edit_type_title_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen48"
        android:textColor="@color/text_color333"
        android:textSize="@dimen/title_txt_size"
        android:text="选择类型"
        android:gravity="center"/>
    <View
        android:id="@+id/store_edit_type_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_line_height"
        android:background="@color/grayf2"
        android:layout_below="@id/store_edit_type_title_tv"/>
    <Button
        android:id="@+id/store_edit_type_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen40"
        android:textSize="@dimen/text_normal_size"
        android:textColor="@color/white"
        android:text="确  定"
        android:background="@drawable/water_ripple"
        android:layout_margin="@dimen/dimen20"
        android:layout_alignParentBottom="true"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/store_edit_type_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/store_edit_type_line"
        android:layout_above="@id/store_edit_type_btn"
        android:layout_marginTop="@dimen/dimen20"/>


</RelativeLayout>