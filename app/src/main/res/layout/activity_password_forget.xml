<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.sun.tour.login.forgetpassword.PasswordForgetActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen50"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dimen20"
        android:layout_marginRight="@dimen/dimen10"
        android:layout_marginTop="@dimen/dimen20">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/title_small_txt_size"
            android:textColor="@color/text_color333"
            android:text="手机号码"
            android:gravity="center_vertical"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textColor="@color/text_color333"
            android:textSize="@dimen/title_small_txt_size"
            android:hint="请输入手机号码"
            android:inputType="number"
            android:background="@null"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_line_height"
        android:background="@color/grayec"
        android:layout_marginLeft="@dimen/dimen20"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen50"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dimen20"
        android:layout_marginRight="@dimen/dimen10">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/title_small_txt_size"
            android:textColor="@color/text_color333"
            android:text="验证码"
            android:gravity="center_vertical"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textColor="@color/text_color333"
            android:textSize="@dimen/title_small_txt_size"
            android:hint="请输入验证码"
            android:inputType="number"
            android:background="@null"
            android:gravity="center_vertical"/>
        <View
            android:layout_width="@dimen/base_line_height"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen10"
            android:layout_marginBottom="@dimen/dimen10"
            android:background="@color/grayf2"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/title_small_txt_size"
            android:textColor="@color/blue43"
            android:text="获取验证码"
            android:gravity="center"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_line_height"
        android:background="@color/grayec"
        android:layout_marginLeft="@dimen/dimen20"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen50"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dimen20"
        android:layout_marginRight="@dimen/dimen10">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/title_small_txt_size"
            android:textColor="@color/text_color333"
            android:text="新密码"
            android:gravity="center_vertical"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textColor="@color/text_color333"
            android:textSize="@dimen/title_small_txt_size"
            android:hint="输入6-20位新密码"
            android:inputType="textPassword"
            android:background="@null"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_line_height"
        android:background="@color/grayec"
        android:layout_marginLeft="@dimen/dimen20"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen48"
        android:layout_marginTop="@dimen/dimen50"
        android:layout_marginLeft="@dimen/dimen20"
        android:layout_marginRight="@dimen/dimen20"
        android:textSize="@dimen/text_normal_size"
        android:textColor="@color/white"
        android:background="@drawable/water_ripple"
        android:text="确  定"/>
</LinearLayout>
