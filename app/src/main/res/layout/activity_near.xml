<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.sun.tour.home.near.NearActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen50"
        android:orientation="horizontal"
        android:background="@color/grayf2">
        <com.sun.tour.view.SortView
            android:id="@+id/home_near_v"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:sText="最近"
            app:sTextColor="@color/text_color333"
            app:sTextSize="@dimen/title_small_txt_size"
            app:showSortIcon="false"
            app:lineColor="@color/blue43"
            app:lineHeight="@dimen/base_line_height"
            app:showBottomLine="true"/>
        <com.sun.tour.view.SortView
            android:id="@+id/home_near_price_v"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:sText="价格"
            app:sTextColor="@color/text_color333"
            app:sTextSize="@dimen/title_small_txt_size"
            app:showSortIcon="true"
            app:sort="sort_default"
            app:lineColor="@color/blue43"
            app:lineHeight="@dimen/base_line_height"/>
        <com.sun.tour.view.SortView
            android:id="@+id/home_near_evaluate_v"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:sText="好评率"
            app:sTextColor="@color/text_color333"
            app:sTextSize="@dimen/title_small_txt_size"
            app:showSortIcon="false"
            app:lineColor="@color/blue43"
            app:lineHeight="@dimen/base_line_height"/>
        <com.sun.tour.view.SortView
            android:id="@+id/home_near_use_v"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:sText="利用率"
            app:sTextColor="@color/text_color333"
            app:sTextSize="@dimen/title_small_txt_size"
            app:showSortIcon="false"
            app:lineColor="@color/blue43"
            app:lineHeight="@dimen/base_line_height"/>
        <com.sun.tour.view.SortView
            android:id="@+id/home_near_more_v"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:sText="更多"
            app:sTextColor="@color/text_color333"
            app:sTextSize="@dimen/title_small_txt_size"
            app:showSortIcon="false"
            app:lineColor="@color/blue43"
            app:lineHeight="@dimen/base_line_height"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_line_height"
        android:background="@color/grayf2"/>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/near_hotal_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>
