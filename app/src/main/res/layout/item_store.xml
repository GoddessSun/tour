<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relative_item_store"
    android:background="@color/backgraound"
    android:paddingTop="@dimen/dimen10">

    <FrameLayout
        android:id="@+id/framelayout_item_store"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_hotel_background"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_store_assetting"
            android:text="审核中"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_gravity="right"
            android:layout_margin="10dp"/>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/dimen10"
        android:layout_below="@id/framelayout_item_store">
        <TextView
            android:id="@+id/text_item_store_num_favor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color666"
            android:text="12303"
            android:textSize="14sp"
            android:drawablePadding="4dp"
            android:drawableLeft="@drawable/ic_store_love"
            android:paddingLeft="16dp"/>

        <TextView
            android:id="@+id/text_item_store_num_see"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color666"
            android:text="12303"
            android:textSize="14sp"
            android:paddingLeft="16dp"
            android:layout_toRightOf="@id/text_item_store_num_favor"
            android:layout_marginLeft="40dp"
            android:drawableLeft="@drawable/ic_store_see"
            android:drawablePadding="4dp"/>

        <TextView
            android:id="@+id/text_item_store_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_item_store_num_favor"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:textColor="@color/text_color666"
            android:layout_marginLeft="16dp"
            android:text="有效期限:   2018-01-10 至 2018-01-29"/>

        <View
            android:id="@+id/view_line_item_store"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/color_base_line"
            android:layout_below="@id/text_item_store_time"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="@dimen/dimen16"
            android:layout_marginLeft="@dimen/dimen16"
            android:layout_marginRight="@dimen/dimen16"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dimen16"
            android:paddingRight="@dimen/dimen16"
            android:orientation="horizontal"
            android:layout_below="@id/view_line_item_store"
            android:paddingBottom="@dimen/dimen16">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="编辑"
                android:textColor="@color/text_color333"
                android:textSize="16sp"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_store_edit"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="日期编辑"
                android:textColor="@color/text_color333"
                android:textSize="16sp"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_store_time"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="删除"
                android:textColor="@color/text_color333"
                android:textSize="16sp"
                android:paddingLeft="42dp"
                android:gravity="right"
                android:drawableLeft="@drawable/ic_store_cancle"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>