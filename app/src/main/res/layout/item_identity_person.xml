<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen40"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/identity_person_name_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/title_small_txt_size"
            android:textColor="@color/text_color333"
            android:text="证件1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen20"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:textSize="@dimen/title_small_txt_size"
            android:textColor="@color/text_color999"
            android:text="正面照"
            android:gravity="center_vertical"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:textSize="@dimen/title_small_txt_size"
            android:textColor="@color/blue43"
            android:text="已认证"
            android:gravity="center_vertical|right"
            android:drawableRight="@drawable/ic_next"
            android:drawablePadding="@dimen/dimen10"
            android:layout_marginRight="@dimen/dimen10"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_line_height"
        android:background="@color/grayf2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen40"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/title_small_txt_size"
            android:textColor="@color/text_color333"
            android:text=""
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen20"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:textSize="@dimen/title_small_txt_size"
            android:textColor="@color/text_color999"
            android:text="背面照"
            android:gravity="center_vertical"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:textSize="@dimen/title_small_txt_size"
            android:textColor="@color/blue43"
            android:text="已认证"
            android:gravity="center_vertical|right"
            android:drawableRight="@drawable/ic_next"
            android:drawablePadding="@dimen/dimen10"
            android:layout_marginRight="@dimen/dimen10"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_line_height"
        android:background="@color/grayf2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen40"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/title_small_txt_size"
            android:textColor="@color/text_color333"
            android:text=""
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen20"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:textSize="@dimen/title_small_txt_size"
            android:textColor="@color/text_color999"
            android:text="证件有效期限"
            android:gravity="center_vertical"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:textSize="@dimen/title_small_txt_size"
            android:textColor="@color/blue43"
            android:text=""
            android:gravity="center_vertical|right"
            android:layout_marginRight="@dimen/dimen10"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_line_height"
        android:background="@color/grayec"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen10"
        android:background="@color/grayf2"/>
</LinearLayout>