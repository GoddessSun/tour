<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen48"
        android:orientation="horizontal">
        <Button
            android:id="@+id/search_more_choice_dt__cancel_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/graycc"
            android:textSize="@dimen/title_txt_size"
            android:textColor="@color/white"
            android:text="取消"/>
        <Button
            android:id="@+id/search_more_choice_dt__finish_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/blue43"
            android:textSize="@dimen/title_txt_size"
            android:textColor="@color/white"
            android:text="确定"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen60"
        android:layout_marginBottom="@dimen/dimen60"
        android:gravity="center">
        <DatePicker
            android:id="@+id/search_more_choice_date_dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:calendarViewShown="false"
            android:spinnersShown="true"
            android:datePickerMode="spinner"/>
        <TimePicker
            android:id="@+id/search_more_choice_time_tp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner" />
    </LinearLayout>

</LinearLayout>