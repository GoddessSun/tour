<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <TextView
        android:id="@+id/guide_title_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen40"
        android:textSize="@dimen/text_normal_size"
        android:textColor="@color/text_color333"
        android:text="流程1"
        android:gravity="center"
        android:background="@color/grayf2"/>
    <TextView
        android:id="@+id/guide_content_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen40"
        android:textSize="@dimen/title_small_txt_size"
        android:textColor="@color/text_color333"
        android:text="指导1"
        android:paddingLeft="@dimen/dimen20"
        android:paddingRight="@dimen/dimen15"
        android:gravity="center_vertical"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_line_height"
        android:background="@color/grayf2"
        android:layout_marginLeft="@dimen/dimen20"
        android:layout_marginRight="@dimen/dimen15"/>
</LinearLayout>