<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grayf2"
    tools:context="com.sun.tour.schedule.ScheduleActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen48"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen48">
            <ImageView
                android:id="@+id/schedule_back_iv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title_txt_size"
                android:textColor="@color/text_color333"
                android:text="日程设定"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/store_schedule_save_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_normal_size"
                android:textColor="@color/blue43"
                android:text="保存"
                android:layout_alignParentRight="true"
                android:paddingLeft="@dimen/dimen10"
                android:paddingRight="@dimen/dimen20"
                android:gravity="center"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="@dimen/base_line_height">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen48"
            android:paddingLeft="@dimen/dimen20"
            android:paddingRight="@dimen/dimen20">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal_size"
                android:textColor="@color/text_color333"
                android:text="当前日程情况"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/schedule_add_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dimen20"
                android:textSize="@dimen/text_normal_size"
                android:textColor="@color/blue43"
                android:text="新增日程"
                android:layout_alignParentRight="true"
                android:gravity="center"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_line_height"
            android:background="@color/grayf2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen40"
            android:orientation="horizontal"
            android:background="@color/grayfa">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/title_small_txt_size"
                android:textColor="@color/text_color333"
                android:gravity="center"
                android:text="日"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/title_small_txt_size"
                android:textColor="@color/text_color333"
                android:gravity="center"
                android:text="一"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/title_small_txt_size"
                android:textColor="@color/text_color333"
                android:gravity="center"
                android:text="二"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/title_small_txt_size"
                android:textColor="@color/text_color333"
                android:gravity="center"
                android:text="三"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/title_small_txt_size"
                android:textColor="@color/text_color333"
                android:gravity="center"
                android:text="四"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/title_small_txt_size"
                android:textColor="@color/text_color333"
                android:gravity="center"
                android:text="五"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/title_small_txt_size"
                android:textColor="@color/text_color333"
                android:gravity="center"
                android:text="六"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_line_height"
            android:background="@color/grayf2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen48"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/schedule_first_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/schedule_first_tv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/title_small_txt_size"
                    android:textColor="@color/red_light"
                    android:text="8月"
                    android:gravity="center"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/base_line_height"
                    android:background="@color/grayf2"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/schedule_second_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/schedule_second_tv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/title_small_txt_size"
                    android:textColor="@color/red_light"
                    android:text="8月"
                    android:gravity="center"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/base_line_height"
                    android:background="@color/grayf2"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/schedule_three_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/schedule_three_tv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/title_small_txt_size"
                    android:textColor="@color/red_light"
                    android:text="8月"
                    android:gravity="center"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/base_line_height"
                    android:background="@color/grayf2"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/schedule_fourth_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/schedule_fourth_tv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/title_small_txt_size"
                    android:textColor="@color/red_light"
                    android:text="8月"
                    android:gravity="center"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/base_line_height"
                    android:background="@color/grayf2"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/schedule_fifth_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/schedule_fifth_tv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/title_small_txt_size"
                    android:textColor="@color/red_light"
                    android:text="8月"
                    android:gravity="center"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/base_line_height"
                    android:background="@color/grayf2"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/schedule_sexth_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/schedule_sexth_tv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/title_small_txt_size"
                    android:textColor="@color/red_light"
                    android:text="8月"
                    android:gravity="center"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/base_line_height"
                    android:background="@color/grayf2"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/schedule_seventh_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/schedule_seventh_tv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/title_small_txt_size"
                    android:textColor="@color/red_light"
                    android:text="8月"
                    android:gravity="center"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/base_line_height"
                    android:background="@color/grayf2"/>
            </LinearLayout>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/schedule_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>
