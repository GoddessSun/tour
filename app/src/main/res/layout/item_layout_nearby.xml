<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="8dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/roundimage_item_nearby"
            android:layout_width="@dimen/dimen160"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            app:riv_corner_radius_top_right="4dp"
            app:riv_corner_radius_top_left="4dp"
            app:riv_mutate_background="true"
            android:background="@drawable/ic_hotel_background"/>

        <LinearLayout
            android:layout_width="@dimen/dimen160"
            android:layout_height="20dp"
            android:background="@color/black_transparent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_alignBottom="@id/roundimage_item_nearby">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginRight="6dp"
                android:textSize="10sp"
                android:text="喜来登酒店"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:text="2.5km"/>
        </LinearLayout>

        <TextView
            android:id="@+id/text_item_nearby_des"
            android:layout_width="@dimen/dimen160"
            android:layout_height="wrap_content"
            android:text="锥子脸大长腿美女图如云锥子脸大长腿美女图如云"
            android:textColor="@color/text_color999"
            android:textSize="10sp"
            android:layout_below="@id/roundimage_item_nearby"
            android:padding="6dp"
            android:lineSpacingExtra="4dp"/>
        <LinearLayout
            android:id="@+id/linear_hour"
            android:layout_width="@dimen/dimen160"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="6dp"
            android:gravity="center_vertical"
            android:layout_below="@id/text_item_nearby_des">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_blue_background"
                android:textSize="10sp"
                android:text="时"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/yellow"
                android:textSize="12sp"
                android:text="￥200"
                android:paddingLeft="6dp"
                android:paddingRight="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color999"
                android:textSize="12sp"
                android:text="/ 时"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_day"
            android:layout_width="@dimen/dimen160"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="6dp"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:layout_below="@id/linear_hour">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_blue_background"
                android:textSize="10sp"
                android:text="天"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/yellow"
                android:textSize="12sp"
                android:text="￥2000"
                android:paddingLeft="6dp"
                android:paddingRight="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color999"
                android:textSize="12sp"
                android:text="/ 天"/>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>