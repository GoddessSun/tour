<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/choice_city_header_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen30"
        android:background="@color/grayed"
        android:text="A"
        android:textSize="@dimen/title_small_txt_size"
        android:textColor="@color/text_color333"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dimen20"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/choice_city_name_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen48"
        android:textColor="@color/text_color333"
        android:textSize="@dimen/title_small_txt_size"
        android:text="澳门"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_line_height"
        android:background="@color/grayf2"
        android:layout_marginLeft="20dp"/>
</LinearLayout>