<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/message_list_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/message_icon_iv"
            android:layout_width="@dimen/dimen60"
            android:layout_height="@dimen/dimen60"
            android:background="@color/text_color666"
            android:layout_margin="@dimen/dimen10"/>
        <TextView
            android:id="@+id/message_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_normal_size"
            android:textColor="@color/text_color333"
            android:text="王大爷"
            android:layout_toRightOf="@id/message_icon_iv"
            android:layout_alignTop="@id/message_icon_iv"
            android:layout_marginLeft="@dimen/dimen10"
            android:layout_marginTop="@dimen/dimen5"
            android:singleLine="true"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/message_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_small_txt_size"
            android:textColor="@color/text_color999"
            android:text="2011-09-23 12:23"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/message_icon_iv"
            android:layout_marginRight="@dimen/dimen10"/>
        <TextView
            android:id="@+id/message_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_small_txt_size"
            android:textColor="@color/text_color999"
            android:text="这是什么东西"
            android:layout_alignLeft="@id/message_name_tv"
            android:layout_alignBottom="@id/message_icon_iv"
            android:layout_marginBottom="5dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginRight="@dimen/dimen30"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_size10"
            android:textColor="@color/white"
            android:background="@drawable/shape_red_round_point"
            android:text="1"
            android:layout_toRightOf="@id/message_icon_iv"
            android:layout_alignTop="@id/message_icon_iv"
            android:layout_marginLeft="-25dp"
            android:layout_marginTop="-6dp"
            android:gravity="center"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_line_height"
        android:background="@color/graycc" />
</LinearLayout>