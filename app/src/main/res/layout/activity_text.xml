<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grayf2"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.sun.tour.store.text.TextActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen48"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen48">
            <ImageView
                android:id="@+id/store_edit_text_back_iv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title_txt_size"
                android:textColor="@color/text_color333"
                android:text="宣传文"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/store_edit_text_save_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_normal_size"
                android:textColor="@color/blue43"
                android:text="保存"
                android:layout_alignParentRight="true"
                android:paddingLeft="@dimen/dimen10"
                android:paddingRight="@dimen/dimen20"
                android:gravity="center"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen20"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/base_line_height">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen40"
            android:textSize="@dimen/title_small_txt_size"
            android:textColor="@color/text_color333"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="输入标题"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_line_height"
            android:background="@color/grayf2"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dimen150"
            android:textSize="@dimen/title_small_txt_size"
            android:textColor="@color/text_color333"
            android:hint="宣传文具体内容"
            android:gravity="start"
            android:layout_marginTop="@dimen/dimen10"
            android:background="@null"/>
    </LinearLayout>
</LinearLayout>
