<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_content_item_my_appointment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingRight="@dimen/dimen16"
    android:paddingLeft="@dimen/dimen16"
    android:paddingBottom="@dimen/dimen10">

    <ImageView
        android:id="@+id/image_item_my_appoint"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_hotel_background"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_item_my_appoint"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true">
        <LinearLayout
            android:id="@+id/linear_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_color333"
                android:textSize="@dimen/text_normal_size"
                android:text="喜来登豪华酒店"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_size12"
                android:text="等待接受"
                android:textColor="@color/red"/>
        </LinearLayout>
        <TextView
            android:id="@+id/text_item_my_appoint_brief"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/text_color999"
            android:text="都是美女都是美女都是美女重要的事情说三遍"
            android:textSize="@dimen/txt_size12"
            android:layout_below="@id/linear_item_name"
            android:layout_marginTop="4dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_item_my_appoint_brief"
            android:layout_marginTop="4dp">
            <LinearLayout
                android:id="@+id/linear_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_blue_background"
                    android:textSize="10sp"
                    android:text="时"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/yellow"
                    android:textSize="10sp"
                    android:text="￥2000"
                    android:paddingLeft="6dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color999"
                    android:textSize="10sp"
                    android:text="/时"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/linear_time"
                android:layout_marginTop="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_blue_background"
                    android:textSize="10sp"
                    android:text="天"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/yellow"
                    android:textSize="10sp"
                    android:text="￥2000"
                    android:paddingLeft="6dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color999"
                    android:textSize="10sp"
                    android:text="/天"/>
            </LinearLayout>

            <TextView
                android:id="@+id/text_item_my_appoint_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_size10"
                android:textColor="@color/text_color999"
                android:text="起始时间: 2018-09-02 8:00"
                android:layout_below="@id/linear_day"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/text_item_my_appoint_stop_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_size10"
                android:textColor="@color/text_color999"
                android:text="结束时间: 2018-09-02 8:00"
                android:layout_below="@id/text_item_my_appoint_start_time"
                android:layout_marginTop="4dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circle_image_item_my_appiont"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_user_icon"
                android:scaleType="centerCrop"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:civ_border_color="@color/blue"
                app:civ_border_width="1dp"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>