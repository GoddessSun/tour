<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grayf2"
    tools:context="com.sun.tour.search.SearchActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen48"
            android:orientation="horizontal"
            android:background="@color/white">
            <ImageView
                android:id="@+id/search_cancel_iv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dimen10"
                android:paddingRight="10dp"
                android:src="@drawable/ic_back"/>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dimen10"
                android:background="@drawable/shape_search_tour">
                <EditText
                    android:id="@+id/search_title_search_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textSize="@dimen/text_normal_size"
                    android:textColor="@color/text_color666"
                    android:hint="目的地/酒店/关键词"
                    android:paddingLeft="@dimen/dimen10"
                    android:paddingRight="@dimen/dimen10"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:visibility="gone"/>
                <LinearLayout
                    android:id="@+id/search_title_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_normal_size"
                        android:textColor="@color/text_color666"
                        android:text="目的地/酒店/关键词"/>
                </LinearLayout>
            </FrameLayout>
            <TextView
                android:id="@+id/search_now_location_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="@dimen/dimen10"
                android:paddingLeft="@dimen/dimen10"
                android:textSize="@dimen/title_small_txt_size"
                android:textColor="@color/text_color666"
                android:text="北京"
                android:gravity="center"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen48"
            android:paddingLeft="@dimen/dimen20"
            android:paddingRight="@dimen/dimen20">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal_size"
                android:textColor="@color/text_color666"
                android:text="历史搜索"/>
            <TextView
                android:id="@+id/search_history_clear_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title_txt_size"
                android:textColor="@color/textc1"
                android:text="清空"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/search_history_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <Button
        android:id="@+id/search_more_bottom_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen48"
        android:background="@drawable/water_ripple"
        android:textSize="@dimen/title_txt_size"
        android:textColor="@color/white"
        android:text="更多条件搜索"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dimen20"/>

</RelativeLayout>
