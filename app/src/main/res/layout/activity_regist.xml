<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="@dimen/dimen20"
    tools:context="com.sun.tour.regist.RegistActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen48"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen20">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/title_txt_size"
            android:textColor="@color/text_color333"
            android:text="手机号"/>
        <EditText
            android:id="@+id/regist_mobile_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="@dimen/title_txt_size"
            android:textColor="@color/text_color333"
            android:hint="请输入手机号码"
            android:textColorHint="@color/text_color666"
            android:background="@null"
            android:layout_marginLeft="@dimen/dimen16"
            android:inputType="number"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_line_height"
        android:background="@color/text_color999"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen48"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/title_txt_size"
            android:textColor="@color/text_color333"
            android:text="验证码"/>
        <EditText
            android:id="@+id/regist_code_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textSize="@dimen/title_txt_size"
            android:textColor="@color/text_color333"
            android:hint="请输入验证码"
            android:textColorHint="@color/text_color666"
            android:background="@null"
            android:layout_marginLeft="@dimen/dimen16"
            android:inputType="number"/>
        <View
            android:layout_width="@dimen/base_line_height"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dimen10"
            android:background="@color/text_color999"/>
        <TextView
            android:id="@+id/regist_get_code_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:textSize="@dimen/title_txt_size"
            android:textColor="@color/blue43"
            android:text="获取验证码"
            android:gravity="center"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_line_height"
        android:background="@color/text_color999"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen48"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/title_txt_size"
            android:textColor="@color/text_color333"
            android:text="昵   称"/>
        <EditText
            android:id="@+id/regist_nickname_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="@dimen/title_txt_size"
            android:textColor="@color/text_color333"
            android:hint="请输入昵称"
            android:textColorHint="@color/text_color666"
            android:background="@null"
            android:layout_marginLeft="@dimen/dimen16" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_line_height"
        android:background="@color/text_color999"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen48"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen5"
        android:gravity="center_vertical">
        <CheckBox
            android:id="@+id/regist_agreenment_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_small_txt_size"
            android:textColor="@color/text_color666"
            android:text="已阅读并同意"/>
        <TextView
            android:id="@+id/regist_agreenment_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_small_txt_size"
            android:textColor="@color/blue43"
            android:text="《用户协议》"
            android:layout_marginLeft="@dimen/dimen10"/>
    </LinearLayout>

    <Button
        android:id="@+id/regist_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen48"
        android:textSize="@dimen/title_txt_size"
        android:textColor="@color/white"
        android:text="下一步"
        android:background="@drawable/selector_regist_btn"
        android:layout_marginTop="@dimen/dimen20"
        android:layout_marginLeft="@dimen/dimen5"
        android:layout_marginRight="@dimen/dimen5"/>
</LinearLayout>
