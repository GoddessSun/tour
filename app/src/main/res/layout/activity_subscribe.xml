<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayf2"
    tools:context="com.sun.tour.home.subscribe.SubscribeActivity">
    <Button
        android:id="@+id/subscribe_hotal_pay_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen48"
        android:textSize="@dimen/text_normal_size"
        android:textColor="@color/white"
        android:background="@color/yellowfe"
        android:text="预约支付"
        android:layout_alignParentBottom="true"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/subscribe_hotal_pay_btn">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dimen30">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen15"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/subscribe_hotal_icon_iv"
                    android:layout_width="@dimen/dimen160"
                    android:layout_height="@dimen/dimen100"
                    android:src="@drawable/ic_hotel_background"/>
                <TextView
                    android:id="@+id/subscribe_hotal_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_normal_size"
                    android:textColor="@color/text_color333"
                    android:text="XXXX酒店"
                    android:layout_toRightOf="@id/subscribe_hotal_icon_iv"
                    android:layout_alignTop="@id/subscribe_hotal_icon_iv"
                    android:layout_marginLeft="@dimen/dimen15"
                    android:layout_marginTop="@dimen/dimen3"/>
                <TextView
                    android:id="@+id/subscribe_hotal_discribe_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/title_small_txt_size"
                    android:textColor="@color/text_color999"
                    android:text="Android Studio有一个工具选项叫Vector Asset Studio,它可以添加material icons 或者是导入SVG文件到你的工程中,而..."
                    android:layout_alignLeft="@id/subscribe_hotal_name_tv"
                    android:layout_below="@id/subscribe_hotal_name_tv"
                    android:layout_marginTop="@dimen/dimen10"
                    android:layout_alignBottom="@id/subscribe_hotal_icon_iv"
                    android:ellipsize="end"
                    android:layout_marginBottom="@dimen/dimen3"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen48"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dimen10"
                android:paddingRight="@dimen/dimen10"
                android:paddingLeft="@dimen/dimen20">
                <TextView
                    android:id="@+id/subscribe_hotal_judge_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/title_small_txt_size"
                    android:textColor="@color/text_color666"
                    android:text="计费方式"
                    android:layout_centerVertical="true"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/subscribe_hotal_judge_tv1"
                    android:gravity="center_vertical|right">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/title_small_txt_size"
                        android:textColor="@color/red"
                        android:text="¥100.0"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/title_small_txt_size"
                        android:textColor="@color/text_color666"
                        android:text="/小时"
                        android:gravity="center"
                        android:drawableRight="@drawable/ic_next"
                        android:drawablePadding="@dimen/dimen10"/>
                </LinearLayout>

            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dimen20"
                android:paddingTop="@dimen/dimen15"
                android:paddingBottom="@dimen/dimen15"
                android:textSize="@dimen/text_normal_size"
                android:textColor="@color/text_color666"
                android:text="预约时间"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dimen20"
                android:paddingRight="@dimen/dimen10"
                android:paddingTop="@dimen/dimen10"
                android:paddingBottom="@dimen/dimen10"
                android:background="@color/white">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen30">
                    <TextView
                        android:id="@+id/subscribe_hotal_start_time_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/title_small_txt_size"
                        android:textColor="@color/text_color666"
                        android:text="起始时间:"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/subscribe_hotal_start_time_set_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingRight="@dimen/dimen5"
                        android:paddingLeft="@dimen/dimen15"
                        android:textSize="@dimen/title_small_txt_size"
                        android:textColor="@color/blue43"
                        android:text="设置"
                        android:layout_alignParentRight="true"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/subscribe_hotal_start_time_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/title_small_txt_size"
                        android:textColor="@color/text_color666"
                        android:text="2018-2-1 11:30"
                        android:layout_toRightOf="@id/subscribe_hotal_start_time_tv1"
                        android:layout_toLeftOf="@id/subscribe_hotal_start_time_set_tv"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dimen10"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen30"
                    android:layout_marginTop="@dimen/dimen10">
                    <TextView
                        android:id="@+id/subscribe_hotal_end_time_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/title_small_txt_size"
                        android:textColor="@color/text_color666"
                        android:text="结束时间:"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/subscribe_hotal_end_time_set_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingRight="@dimen/dimen5"
                        android:paddingLeft="@dimen/dimen15"
                        android:textSize="@dimen/title_small_txt_size"
                        android:textColor="@color/blue43"
                        android:text="设置"
                        android:layout_alignParentRight="true"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/subscribe_hotal_end_time_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/title_small_txt_size"
                        android:textColor="@color/text_color666"
                        android:text="2018-2-1 11:30"
                        android:layout_toRightOf="@id/subscribe_hotal_end_time_tv1"
                        android:layout_toLeftOf="@id/subscribe_hotal_end_time_set_tv"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dimen10"/>
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dimen20"
                android:paddingTop="@dimen/dimen15"
                android:paddingBottom="@dimen/dimen15"
                android:textSize="@dimen/text_normal_size"
                android:textColor="@color/text_color666"
                android:text="服务项目"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen20"
                android:orientation="vertical"
                android:background="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen100"
                    android:orientation="horizontal">
                    <RadioGroup
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:textSize="@dimen/title_small_txt_size"
                            android:textColor="@color/text_color666"
                            android:text="服务一"/>
                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:textSize="@dimen/title_small_txt_size"
                            android:textColor="@color/text_color666"
                            android:text="服务一"/>
                    </RadioGroup>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:textSize="@dimen/title_small_txt_size"
                            android:textColor="@color/blue43"
                            android:text="服务详情"
                            android:gravity="center_vertical|right"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:textSize="@dimen/title_small_txt_size"
                            android:textColor="@color/blue43"
                            android:text="服务详情"
                            android:gravity="center_vertical|right"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_normal_size"
                    android:textColor="@color/text_color666"
                    android:text="被服务者"
                    android:layout_marginTop="@dimen/dimen20"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/base_line_height"
                    android:background="@color/grayf2"
                    android:layout_marginTop="15dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
