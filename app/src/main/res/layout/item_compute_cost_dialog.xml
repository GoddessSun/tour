<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen48"
        android:text="选择品类"
        android:textSize="@dimen/title_txt_size"
        android:textColor="@color/text_color333"
        android:gravity="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_line_height"
        android:background="@color/grayf2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen120"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/dimen40"
        android:layout_marginLeft="@dimen/dimen20"
        android:layout_marginRight="@dimen/dimen20"
        android:layout_marginTop="@dimen/dimen40">
        <RadioGroup
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/title_small_txt_size"
                android:textColor="@color/text_color666"
                android:text="按天"
                android:gravity="center_vertical"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/title_small_txt_size"
                android:textColor="@color/text_color666"
                android:text="按时"
                android:gravity="center_vertical"/>
        </RadioGroup>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/title_small_txt_size"
                android:textColor="@color/text_color999"
                android:text="¥2000.0/天"
                android:gravity="center_vertical|right"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/title_small_txt_size"
                android:textColor="@color/text_color999"
                android:text="¥200.0/时"
                android:gravity="center_vertical|right"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/dialog_compute_cost_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen48"
        android:textSize="@dimen/text_normal_size"
        android:textColor="@color/white"
        android:text="确定"
        android:background="@drawable/water_ripple"
        android:layout_margin="@dimen/dimen20"
        android:layout_alignParentBottom="true"/>

</LinearLayout>